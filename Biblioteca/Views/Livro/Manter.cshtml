@model Biblioteca.Models.Livro

@{
    ViewBag.Title = "Manter";
}

<h2>Manter</h2>

@using (Html.BeginForm("Salvar", "Livro", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <table class="table">
        <thead>
            <tr>
                <th>Campo</th>
                <th>Valor</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.Label("Titulo")</td>
                <td>@Html.TextBoxFor(x => x.Titulo, new { maxlength = 50 }) @Html.ValidationMessageFor(model => model.Titulo)</td>
            </tr>
            <tr>
                <td>@Html.Label("Autor")</td>
                <td>@Html.TextBoxFor(x => x.Autor, new { maxlength = 50 }) @Html.ValidationMessageFor(model => model.Autor)</td>
            </tr>
            <tr>
                <td>@Html.Label("Editora")</td>
                <td>@Html.TextBoxFor(x => x.Editora, new { maxlength = 50 }) @Html.ValidationMessageFor(model => model.Editora)</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" class="btn btn-primary" value="Salvar" />
                </td>
            </tr>
        </tbody>
    </table>

}
@section scripts
    {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
}
